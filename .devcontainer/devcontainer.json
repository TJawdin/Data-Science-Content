{
  "name": "python-3",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bookworm",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python", "ms-python.vscode-pylance"]
    },
    "codespaces": { "openFiles": ["README.md"] }
  },
  "updateContentCommand": "python -V && pip -V",
  "portsAttributes": {
    "8501": { "label": "Streamlit - Primary", "onAutoForward": "openPreview" },
    "8502": { "label": "Streamlit - NBA Performance", "onAutoForward": "openPreview" },
    "8503": { "label": "Streamlit - Uber Pickups", "onAutoForward": "openPreview" },
    "8504": { "label": "Streamlit - Supply Chain", "onAutoForward": "openPreview" }
  },
  "forwardPorts": [8501, 8502, 8503, 8504]
}
