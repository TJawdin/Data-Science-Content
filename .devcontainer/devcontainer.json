{
  "name": "python-3",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bookworm",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python", "ms-python.vscode-pylance"]
    },
    "codespaces": { "openFiles": ["README.md"] }
  },
  // Keep this lightâ€”install via the debug run (pip will be invoked automatically on first run)
  "updateContentCommand": "python -V && pip -V",
  "portsAttributes": {
    "8501": { "label": "Streamlit", "onAutoForward": "openPreview" }
  },
  "forwardPorts": [8501]
}